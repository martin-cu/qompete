<div class="home w-100" style="margin-top: 2.8rem; height: calc(100vh - 128px);">
    <div class="mx-auto" style="height: 150px;">
        
        <div class="w-100 p-2" style="background-color: transparent; border-radius:5px;">
            <div class="mx-auto text-center">
                <img class="" src="../img/logo.png" style="height: 50px; width: 60px;">
            </div>
        </div>

        <div class="d-flex p-2 pb-3 mx-2 mt-3" style="background-color: transparent; border-radius: 20px;">
            <div class="" style="border: solid black 1px; border-radius: 50%; background-color: white;">
                <img src="../img/girl-sad.png" style="margin-left: 5px;height: 130px; width: 130px;">
            </div>
            <div class="mt-3 w-100">
                <div class="text-center" style="font-size: 44px;">{{user.score}}</div>
                <div class="text-center text-muted" style="font-size: 22px;">{{desc}}</div>
            </div>
        </div>

        <!-- <div class="mt-3  mb-2 text-center font-weight" style="font-size: 28px;">
            {{user.score}}
        </div> -->

        <div class="text-center directions mt-5" style="z-index: 999;">
            Touch the cat to start
        </div>
    </div>

    <div class="opt-box hide">
        <div class="thought instructions question-lg"><div>What would you like to do today?</div></div>
        <div class="thought instructions cat-opts-sm h-reverse" data-href="#"><div>Account</div></div>
        <div class="thought instructions cat-opts-sm" data-href="/journal"><div>Journal</div></div>
        <div class="thought instructions cat-opts-sm" data-href="/chat"><div>Chat</div></div>
    </div>

    <div class="main">
        <span class="stand"></span>

        <div class="cat">
            <div class="sleep">
                <div>z</div>
                <div>z</div>
                <div>z</div>
                <div>z</div>
                <div>z</div>
                <div>z</div>
            </div>
            
            <div class="body"></div>
            <div class="head">
                <div class="ear"></div>
                <div class="ear"></div>
            </div>

            <div class="face">
                <div class="hide eyes">
                    <div>
                        <div class="pupil"></div>
                    </div>
                    <div> 
                        <div class="pupil"></div>
                    </div>
                </div>

                <div class="nose"></div>
                <div class="whisker-container">
                    <div class="whisker"></div>
                    <div class="whisker"></div>
                </div>
                <div class="whisker-container">
                    <div class="whisker"></div>
                    <div class="whisker"></div>
                </div>
            </div>

            <div class="tail-container">
                <div class="tail">
                <div class="tail">
                    <div class="tail">
                        <div class="tail">
                            <div class="tail">
                                <div class="tail">
                                    <div class="tail"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <i class="fa fa-info-circle" style="font-size: 24px;position: absolute; top: calc(100% - 44px); left: 20px;"></i>
</div>

<script type="text/javascript">
    
    $(document).ready(function() {
        $(document).on('click', function(e) {
            if ($(e.target).parents('.main').length > 0) {
                $('.directions').addClass('hide');
                $('.eyes').removeClass('hide');
                $('.sleep').addClass('hide');
                $('.opt-box').removeClass('hide');
            }
            else {
                setTimeout(function(){ $('.directions').removeClass('hide'); }, 500);
                setTimeout(function(){ $('.opt-box').addClass('hide'); }, 0);
                setTimeout(function(){ 
                    $('.eyes').addClass('hide');
                    $('.sleep').removeClass('hide');
                }, 1500);
            }
        });
    });

</script>